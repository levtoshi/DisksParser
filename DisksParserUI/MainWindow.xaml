<Window x:Class="DisksParserUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisksParserUI" xmlns:views="clr-namespace:DisksParserUI.Views"
        xmlns:vms="clr-namespace:DisksParserUI.ViewModels"
        mc:Ignorable="d"
        Title="DisksParser" Height="800" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:FilesCountingViewModel}">
                <views:FilesCountingView></views:FilesCountingView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:InitializeParsingSettingsViewModel}">
                <views:InitializeParsingSettingsView></views:InitializeParsingSettingsView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:InitializeBannedWordsViewModel}">
                <views:InitializeBannedWordsView></views:InitializeBannedWordsView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DisksParsingViewModel}">
                <views:DisksParsingView></views:DisksParsingView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ParsingResultsViewModel}">
                <views:ParsingResultsView></views:ParsingResultsView>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</Window>